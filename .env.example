# Application Settings
APP_NAME="Multi-Agent Fact-Checking System"
APP_VERSION="1.0.0"
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgresql://factcheck_user:factcheck_pass@localhost:5432/factcheck_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# LLM API Keys (Required)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Configuration
DEFAULT_LLM_MODEL=gpt-4-turbo-preview

# Vector Database
VECTOR_DB_TYPE=chroma
CHROMA_PERSIST_DIR=./data/chroma

# Pinecone (if using)
# PINECONE_API_KEY=your_pinecone_api_key
# PINECONE_ENVIRONMENT=your_pinecone_environment

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Agent Configuration
FACT_CHECK_TIMEOUT=120
MAX_CONCURRENT_CHECKS=10
ESCALATION_THRESHOLD=0.6

# Retrieval Configuration
RETRIEVAL_TOP_K=10
BM25_WEIGHT=0.5
SEMANTIC_WEIGHT=0.5
# LLM API Keys
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
MISTRAL_API_KEY=your_mistral_key_here

# Social Media APIs
TWITTER_API_KEY=your_twitter_key
TWITTER_API_SECRET=your_twitter_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_secret
REDDIT_USER_AGENT=misinformation_detector/1.0

# News API
NEWS_API_KEY=your_news_api_key

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=factcheck_db
POSTGRES_USER=factcheck_user
POSTGRES_PASSWORD=your_secure_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your_weaviate_key

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
API_HOST=0.0.0.0
API_PORT=8000

# Thresholds
ESCALATION_CONFIDENCE_THRESHOLD=0.7
FACT_CHECK_TIMEOUT=30
MAX_EVIDENCE_SOURCES=10
